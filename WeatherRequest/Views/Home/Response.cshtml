@model WeatherRequest.Models.WeatherRequestModel

@{
    ViewData["Title"] = "Weather Result";
}

<!DOCTYPE html>
<html>
<head>
    <title>Weather Result</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .custom-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .custom-form {
            background-color: rgba(10,23,55,0.3);
            padding: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="custom-container">
        <div class="custom-form">
            <h4 class="">Weather Result</h4>
            <p>Country: @Model.Country</p>
            <p>CityName: @Model.CityName</p>
            <p>Main: @Model.Main</p>
            <p>Description: @Model.Description</p>
            <p>Temp: @Model.Temp</p>
            <p>FeelsLike: @Model.FeelsLike</p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
